[user]
    name = Ryan Kaskel
    email = dev@ryankaskel.com

[alias]
    st = status
    sts = status -s
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    last = cat-file commit HEAD
    gui = gitk --all

[merge]
    tool = meld

[color]
    ui = true
    status = auto
    branch = auto
    interactive = auto
    pager = true

[color "branch"]
    current = yellow bold
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/ryan/.gitignore

[giggle]
    main-window-maximized = false
    main-window-geometry = 1164x1081+728+25
    history-view-vpane-position = 615
    file-view-vpane-position = 931
    show-graph = true
    main-window-view = HistoryView
[push]
	default = simple
